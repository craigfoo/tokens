<div class="form-group">
	<%= foo.select(:take_give, [["Give", 1], ["Take", 0]], {}, { class: "form-control input-lg" }) %>
</div>

<div class="form-group">
	<%= foo.label(:quantity) %>
	<%= foo.number_field(:quantity, min: 1, max: 2, class: "form-control input-lg") %>
</div>

<div class="form-group">
	<%= foo.label(:jokester, "User") %>
   	<%= foo.select(:jokester, User.where.not(id: current_user.id).collect {|u| [u.username + " (" + u.token_bal.to_s + ")", u.id] }, {}, { class: "form-control input-lg" } ) %>
</div>



<div class="form-group">
	<%= foo.label(:comment, "Comment") %>
    <%= foo.text_area(:comment, class: "form-control input-lg") %>
</div>