
<%= render 'layouts/tokens' %>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-group">

    <%= f.label :avatar, "Profile Picture" %><br />
    <p class="help-block">jpg or png. Please.</p>
    <%= image_tag(current_user.avatar.url(:medium)) %>
    <%= f.file_field(:avatar, class: "btn btn-secondary btn-lg")  %>

  </div>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
    <%= link_to "Cancel", :back, class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>

<p>Can't stand the heat? <%= link_to "Cancel my account.", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


